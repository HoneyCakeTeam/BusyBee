<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusyBee" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--Primary-->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorOnPrimary">@color/white_100</item>
        <item name="colorPrimaryContainer">@color/primary_100</item>
        <item name="colorOnPrimaryContainer">@color/primary_400</item>
        <!--Secondary-->
        <item name="colorSecondary">@color/black_8</item>
        <item name="colorOnSecondary">@color/white_100</item>
        <item name="colorSecondaryContainer">@color/primary_100</item>
        <item name="colorOnSecondaryContainer">@color/black_60</item>
        <!--Tertiary-->
        <item name="colorTertiary">@color/primary_300</item>
        <item name="colorOnTertiary">@color/white_100</item>
        <item name="colorTertiaryContainer">@color/primary_100</item>
        <item name="colorOnTertiaryContainer">@color/primary_400</item>
        <!--Surface & Background-->
        <item name="colorOutline">@color/theme_light_outline</item>
        <item name="android:colorBackground">@color/white_300</item>
        <item name="colorOnBackground">@color/black_60</item>
        <item name="colorSurface">@color/white_300</item>
        <item name="colorOnSurface">@color/black_60</item>
        <item name="colorSurfaceVariant">@color/white_300</item>
        <item name="colorOnSurfaceVariant">@color/theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/primary_100</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TextInputLayout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="android:textColorHint">@color/black_60</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/spacing_medium
        </item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="startIconTint">@color/primary_500</item>
        <item name="android:textSize">16sp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white_100</item>
        <item name="boxStrokeColor">@color/primary_500</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:paddingVertical">@dimen/spacing_medium</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="ButtonSignUpStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary_500</item>
        <item name="android:background">@drawable/background_signup_button</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextViewSginUpStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextViewHelloStyle">
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/text_giant</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabIndicatorColor">@null</item>
        <item name="tabTextColor">@color/black_38</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="TabTextAppearance" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/notosans_semibold</item>
    </style>

    <style name="TextMemberTaskStyle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginStart">@dimen/spacing_tiny</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/spacing_simi_medium</item>
        <item name="android:background">@drawable/shape_user</item>
    </style>

    <style name="TextDetailsTaskStyle">
        <item name="android:textColor">@color/black_78</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/shape_user</item>
    </style>

    <style name="ButtomDetailsTaskStyle">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:fontFamily">@font/notosans_semibold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginEnd">@dimen/spacing_tiny</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="iconTint">@color/white_100</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="TextTaskNameStyle">
        <item name="android:textColor">@color/black_60</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextTaskUserNameStyle">
        <item name="android:textColor">@color/black_60</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="drawableStartCompat">@drawable/ic_todo_assignee</item>
        <item name="drawableTint">@color/black_60</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="TextTimeTaskStyle">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="drawableStartCompat">@drawable/ic_todo_time</item>
        <item name="drawableTint">@color/black_60</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextDateTaskStyle.TextTimeTaskStyle">
        <item name="android:textColor">@color/black_38</item>
        <item name="drawableTint">@color/black_60</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="drawableStartCompat">@drawable/ic_todo_date</item>
    </style>

    <style name="TextDescriptionTaskStyle">
        <item name="android:textColor">@color/black_60</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_large</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextMemberTaskStyle.TextNameTaskStyle">
        <item name="android:textSize">@dimen/text_giant</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/white_300</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderTextStyleCounter">
        <item name="android:textColor">@color/black_60</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SettingsPrecentageTextStyle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:fontFamily">@font/notosans_semibold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
    </style>

    <style name="SettingsStatusTextStyle">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:fontFamily">@font/notosans_semibold</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="alertDialogCustomStyle">
        <item name="android:background">@color/white_100</item>
    </style>

    <style name="BackgroundCustomSheet">
        <item name="android:background">@drawable/shape_bottomsheet</item>
    </style>

    <style name="BackgroundCustomShapeDetails">
        <item name="android:background">@drawable/shape_user</item>
    </style>

    <style name="BackgroundCustomShapeHome">
        <item name="android:background">@drawable/background_tap</item>
    </style>

    <style name="BackgroundCustomShapeRecycler">
        <item name="android:background">@color/white_100</item>
    </style>
    <style name="BackgroundCustomShapeTaskCount">
        <item name="android:background">@drawable/shape_task_count</item>
        <item name="android:textColor">@color/black_60</item>
    </style>
    <style name="TextDateTaskStyle"></style>

</resources>