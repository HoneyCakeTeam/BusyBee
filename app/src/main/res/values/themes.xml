<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusyBee" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>

    <style name="TextInputLayout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="hintTextColor">@color/black_38</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="android:textSize">16sp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white_100</item>
        <item name="boxStrokeColor">@color/primary_500</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/spacing_medium</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:drawablePadding">@dimen/spacing_simi_medium</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="TabLayoutStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabTextColor">@color/black_38</item>
        <item name="tabMode">fixed</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    <style name="TabTextAppearance" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/notosans_semibold</item>
    </style>


</resources>