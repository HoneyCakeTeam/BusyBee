<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.view.LoginFragment">

    <View
        android:id="@+id/top_squre"
        style="@style/BackgroundCustomShapeViewLogin"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/squre"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/BackgroundCustomShapeViewLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="200dp"
        android:background="@drawable/squre" />

    <View
        style="@style/BackgroundCustomShapeViewLogin"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="-16dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_sign_in" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:gravity="center"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_logo_name"
        style="@style/TextViewHelloStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_honey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_sign_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="64dp"
        app:cardCornerRadius="@dimen/radius_giant"
        app:cardElevation="@dimen/elevation_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            style="@style/BackgroundCustomShapeCardLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="48dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_text_username"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/full_name"
                app:startIconDrawable="@drawable/ic_user2">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_text_password"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/primary_400"
                app:startIconDrawable="@drawable/ic_lock_password_unlocked">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_login"
                style="@style/ButtonSignUpStyle"
                android:text="@string/log_in" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/spacing_giant"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_have_an_account"
                    style="@style/TextViewSginUpStyle"
                    android:text="@string/Do_not_have_an_account" />

                <TextView
                    android:id="@+id/text_sign_up"
                    style="@style/TextViewSginUpStyle"
                    android:layout_marginStart="@dimen/spacing_tiny"
                    android:text="@string/sign_up"
                    android:textColor="@color/primary_500"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>