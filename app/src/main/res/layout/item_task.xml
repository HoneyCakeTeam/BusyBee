<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_tiny"
    android:layout_marginHorizontal="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/radius_semi_large">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/spacing_small"
        android:paddingHorizontal="@dimen/spacing_medium"
        >

        <TextView
            android:id="@+id/text_task_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="ToDo title"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/spacing_small"
            android:fontFamily="@font/notosans_medium"
            android:textColor="@color/black_60"
            android:textSize="@dimen/text_large"
            app:layout_constraintEnd_toStartOf="@+id/text_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/text_task_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_large"
            tools:text="this is toDo description, for that todo, don't ignore it it's just a tool"
            android:textColor="@color/black_60"
            android:textSize="@dimen/text_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_task_name"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/text_task_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_tiny"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_small"
            tools:text="10:30 AM"
            android:fontFamily="@font/notosans_regular"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_tiny"
            app:drawableStartCompat="@drawable/ic_todo_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_task_description"
            />


        <TextView
            android:id="@+id/text_task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_tiny"
            android:gravity="center"
            android:layout_marginStart="@dimen/spacing_small"
            tools:text="1 July"
            android:fontFamily="@font/notosans_regular"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_tiny"
            app:drawableStartCompat="@drawable/ic_todo_date"
            app:layout_constraintBottom_toBottomOf="@id/text_task_time"
            app:layout_constraintStart_toEndOf="@id/text_task_time"
            app:layout_constraintTop_toTopOf="@+id/text_task_time"
            />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_tiny"
            android:gravity="end"
            tools:text="Hamsa Ali"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/notosans_regular"
            android:textSize="@dimen/text_small"
            app:drawableStartCompat="@drawable/ic_todo_assignee"
            app:layout_constraintStart_toEndOf="@+id/text_task_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_task_name"
            app:layout_constraintBottom_toBottomOf="@+id/text_task_name"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>