<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_card"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="@dimen/spacing_tiny"
    android:layout_marginHorizontal="@dimen/spacing_medium"
    app:cardCornerRadius="@dimen/radius_semi_large">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/task_constraint"
        android:background="@color/white_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_small">

        <TextView
            android:id="@+id/text_task_name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_medium"
            tools:text="Task nameeeeeeeeeeeeeeee"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black_60"
            android:textSize="@dimen/text_giant"
            app:layout_constraintStart_toStartOf="@id/task_constraint"
            app:layout_constraintTop_toTopOf="@id/task_constraint" />

        <TextView
            android:id="@+id/text_task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:fontFamily="@font/notosans_regular"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="task describtion  hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_small"
            app:layout_constraintStart_toStartOf="@id/task_constraint"
            app:layout_constraintTop_toBottomOf="@id/text_task_name" />

        <TextView
            android:id="@+id/text_task_time"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_tiny"
            android:gravity="center"
            tools:text="10:30 AM"
            app:drawableStartCompat="@drawable/ic_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_task_description" />

        <TextView
            android:id="@+id/text_user_name"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_tiny"
            android:gravity="center"
            tools:text="Hamsa Ali"
            app:drawableStartCompat="@drawable/ic_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_task_date"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_tiny"
            android:gravity="center"
            tools:text="1 July"
            app:drawableStartCompat="@drawable/ic_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_task_time"
            app:layout_constraintTop_toBottomOf="@id/text_task_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>